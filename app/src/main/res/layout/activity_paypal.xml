<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title for PayPal layout -->
    <TextView
        android:id="@+id/PayPalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to PayPal Payment"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Card Number Input Field -->
    <EditText
        android:id="@+id/editTextCardNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PayPalText"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Expiry Date Input Field -->
    <EditText
        android:id="@+id/editTextExpiryDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Expiry Date (MM/YY)"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextCardNumber"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Zip/Postal Code Input Field -->
    <EditText
        android:id="@+id/editTextPostalCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Zip/Postal Code"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextExpiryDate"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Checkbox for true/false statement (Terms and Conditions) -->
    <CheckBox
        android:id="@+id/checkBoxTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree to the Terms and Conditions"
        app:layout_constraintTop_toBottomOf="@id/editTextPostalCode"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp" />

    <!-- Proceed Button -->
    <Button
        android:id="@+id/buttonProceed"
        android:layout_width="102dp"
        android:layout_height="56dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#1AC11A"
        android:text=" Proceed "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPostalCode" />
</androidx.constraintlayout.widget.ConstraintLayout>
